---
const subtitle = 'Projectes Destacats'
const title = 'Tria, remena, fes clic!'
---

<div class="projects-container">
  <h2>{title}</h2>
  <article class="project project-1"></article>
  <article class="project project-2"></article>
  <p class="bottom-left">{subtitle.toUpperCase()}</p>
</div>

<style>
  .projects-container {
    --color-porject-1: #e4ab97;
    --color-porject-2: #68636a;
    --color-porject-3: #63b2d5;
    --color-porject-4: #9447ff;
    --color-porject-5: #f8931a;
    --color-porject-6: #272727;
    position: relative;
    width: inherit;
    height: inherit;
    display: grid;
    grid-template-columns: repeat(200, 0.5%);
    grid-template-rows: repeat(100, 1%);
  }

  h2 {
    font-weight: var(--font-weight-semibold);
    font-size: 5rem;
    grid-column: 51 / 103;
    grid-row: 15 / span 10;
    letter-spacing: -0.05em;
    line-height: 1.03;

    /* margin-block-end: 2rem; */
  }

  .project {
    background-color: var(--color-secondary);
    border-radius: 0.75rem;
  }

  .project-1 {
    background-color: var(--color-porject-1);
    grid-column: span 41;
    grid-row: 8 / span 45;
  }

  .project-2 {
    background-color: var(--color-porject-2);
    grid-column: 23 / span 34;
    grid-row: span 37 / -5;
    margin-block-end: 0.125rem;
  }
</style>
