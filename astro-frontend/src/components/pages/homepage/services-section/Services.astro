---
const servicesSection = {
  title: 'Els nostres serveis',
  subtitle:
    "Treballem amb l'objectiu de trobar el millor camí creatiu per al teu projecte, marca o empresa.",
  text: 'Comptem amb una xarxa de col·laboradors, experts en diverses disciplines creatives, que aporten el seu coneixement per garantir resultats de primer nivell',
  list: [
    {
      title: 'Disseny gràfic',
      description:
        'Cartells/ flyers i materials promocionals / Maquetació editorial / Disseny per xarxes socials i entorns digitals / Packaging i etiquetatge / Adaptació gràfica a diversos formats',
    },
    {
      title: 'Brànding i identitat corporativa',
      description:
        'Cartells/ flyers i materials promocionals / Maquetació editorial / Disseny per xarxes socials i entorns digitals / Packaging i etiquetatge / Adaptació gràfica a diversos formats',
    },
    {
      title: 'Disseny i desenvolupament web',
      description:
        'Cartells/ flyers i materials promocionals / Maquetació editorial / Disseny per xarxes socials i entorns digitals / Packaging i etiquetatge / Adaptació gràfica a diversos formats',
    },
    {
      title: 'Il·lustració',
      description:
        'Cartells/ flyers i materials promocionals / Maquetació editorial / Disseny per xarxes socials i entorns digitals / Packaging i etiquetatge / Adaptació gràfica a diversos formats',
    },
    {
      title: "Direcció d'art",
      description:
        'Cartells/ flyers i materials promocionals / Maquetació editorial / Disseny per xarxes socials i entorns digitals / Packaging i etiquetatge / Adaptació gràfica a diversos formats',
    },
  ],
}
---

<section id="services">
  <div class="services-hero">
    <h2 class="services__title">{servicesSection?.title.toUpperCase()}</h2>
    <p class="services__subtitle">{servicesSection?.subtitle}</p>
    <p class="services__text text">{servicesSection?.text}</p>
  </div>

  <div class="services-list">
    {
      servicesSection.list.map((service) => (
        <details>
          <summary>
            <h3 class="text">{service.title}</h3>
            <p class="text services-toggle" aria-hidden="true"></p>
          </summary>
          <p>{service.description}</p>
        </details>
      ))
    }
  </div>
</section>

<style>
  .text {
    font-size: var(--font-size-homepage-sections);
    font-weight: var(--font-weight-light);
    max-width: 51rem;
    line-height: 1.184;
  }
  .services-hero {
    height: 100dvh;
    padding-block: var(--padding-block-desktop);
    padding-inline-start: var(--padding-inline-desktop);
    padding-inline-end: 7.25rem;
  }

  .services__title {
    font-size: var(--font-size);
    font-weight: var(--font-weight-light);
    margin-block-end: 7.8125rem;
  }

  .services__subtitle {
    font-size: 5rem;
    letter-spacing: -0.05em;
    font-weight: var(--font-weight-semibold);
    line-height: 1.03;
  }

  .services__text {
    margin-block: 8.0625rem;
    margin-inline-start: auto;
    margin-inline-end: 2rem;
  }
  /* Decorative toggle symbol: plus when closed, minus when open. Kept as a <p> with class "text" to preserve layout/typography */
  summary .services-toggle {
    display: inline-block;
    min-inline-size: 1ch; /* reserve space so it doesn't collapse */
    text-align: end;
    max-inline-size: none; /* override .text max width */
    flex: 0 0 auto; /* prevent stretching */
  }
  summary .services-toggle::before {
    content: '+';
    font-size: inherit;
    font-weight: inherit;
    line-height: 1;
    color: inherit;
  }
  details[open] summary .services-toggle::before,
  details:open summary .services-toggle::before {
    content: '-';
  }
  details {
    --internal-padding-block: 3.5rem;
  }
  details > summary {
    list-style: none;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-inline: var(--padding-inline-desktop);
    border-top: 1px solid;
    padding-block: var(--internal-padding-block);
  }

  details:open > summary {
    border-bottom: 1px solid;
    background-color: #DEE1E4;
  }

  details > p {
    padding-block: var(--internal-padding-block);
    padding-inline: var(--padding-inline-desktop);
  }

  details:last-child > summary {
    border-bottom: 1px solid;
  }

  details:last-child > p {
    border-bottom: 1px solid;
  }



</style>
