---
interface Props {
  text: string
  isActive?: boolean
  class?: string
  href?: string
  [key: string]: any // For data attributes and other props
}

const { text, isActive = false, class: className = '', href, ...rest } = Astro.props
---

{
  href ? (
    <a
      href={href}
      class={`pill-button ${isActive ? 'active' : ''} ${className}`}
      data-astro-prefetch
      {...rest}
    >
      {text}
    </a>
  ) : (
    <button class={`pill-button ${isActive ? 'active' : ''} ${className}`} {...rest}>
      {text}
    </button>
  )
}

<style>
  .pill-button {
    padding-inline: 1.78rem;
    padding-block: 0.3rem;
    border: 1px solid var(--color-secondary);
    border-radius: 9999px;
    background: transparent;
    color: var(--color-secondary);
    font-size: clamp(1rem, 0.913rem + 0.356vi, 1.25rem);
    text-wrap: nowrap;
    cursor: pointer;
    transition:
      background-color 0.3s,
      color 0.3s;
    text-decoration: none;
    font-family: inherit;
    display: inline-block;
  }

  .pill-button:hover,
  .pill-button.active {
    background-color: var(--color-secondary);
    color: var(--color-primary);
  }
</style>
