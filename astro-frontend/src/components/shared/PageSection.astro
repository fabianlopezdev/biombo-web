---
import TwoColumnLayout from '@/components/shared/TwoColumnLayout.astro'

export interface Props {
  title: string
  description?: string | null
  class?: string
}

const { title, description, class: className = '' } = Astro.props
const hasCustomContent = Astro.slots.has('content')
---

<TwoColumnLayout class={className}>
  <h1 slot="first-column">{title}</h1>
  <div slot="second-column" class="content-wrapper">
    {description && !hasCustomContent && <p set:html={description} />}
    {hasCustomContent && <slot name="content" />}
  </div>
</TwoColumnLayout>

<style>
  h1 {
    font-size: clamp(3rem, 2.305rem + 2.85vi, 5rem);
    letter-spacing: -0.04em;
    font-weight: var(--font-weight-semibold);
  }

  .content-wrapper :global(p) {
    font-size: clamp(1.125rem, 0.691rem + 1.781vi, 2.375rem);
    line-height: 1.2;
    padding-block-start: 1.2rem;
    letter-spacing: -0.04em;
    margin-block-end: 0px !important;
  }

  @media (width < 992px) {
    .content-wrapper :global(p) {
      padding-block-start: 0rem;
    }
  }
</style>
