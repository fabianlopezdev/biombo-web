---
import PageLayoutRouter from '@/utils/pages/PageLayoutRouter.astro'
import {
  getCatalanPageNames,
  getLayoutForCatalanPage,
  type CatalanStaticPath,
} from '@/shared/config/pageRoutes'

export const prerender = true

export async function getStaticPaths(): Promise<CatalanStaticPath[]> {
  return getCatalanPageNames().map((pagina) => ({
    params: { pagines: pagina },
    props: { pagina, locale: 'ca' },
  }))
}

const { pagina, locale } = Astro.props
const layout = getLayoutForCatalanPage(pagina)
---

<PageLayoutRouter {layout} {locale} />
