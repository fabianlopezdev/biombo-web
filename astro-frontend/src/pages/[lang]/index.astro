---
// Dynamic route for other language homepages (English and Spanish)
import HomepageLayout from '@/layouts/pages/HomepageLayout.astro'

export const prerender = true

export async function getStaticPaths() {
  // Only handle English and Spanish homepages
  // Catalan homepage is at root /index.astro
  const languages = ['en', 'es'] as const

  return languages.map((lang) => ({
    params: { lang },
    props: { locale: lang },
  }))
}

const { locale } = Astro.props
---

<HomepageLayout {locale} />
