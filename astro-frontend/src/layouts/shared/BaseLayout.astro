---
import criticalCSS from '@/styles/critical.css?raw'
import HeaderSVGHover from '@/assets/header-hover-page.svg?raw'
import { fetchSiteSettings } from '@/lib/sanity/queries/siteSettingsQueries'
import { fetchHeader } from '@/lib/sanity/queries/headerQueries'
import { fetchFooter } from '@/lib/sanity/queries/footerQueries'
import Header from '@/components/shared/header/Header.astro'
import Footer from '@/components/shared/Footer.astro'
import PageLoader from '@/components/pages/homepage/HomePageLoader.astro'
import {
  generateHreflangData,
  getCanonicalUrl,
  getOpenGraphLocale,
  type SupportedLanguage,
} from '@/helpers/i18n/helpers'

interface Props {
  pageMetaTitle: string
  pageMetaDescription?: string // Optional description prop
}

const { pageMetaTitle, pageMetaDescription } = Astro.props

// Get the current locale from Astro's i18n middleware
const locale = (Astro.currentLocale ?? 'ca') as 'ca' | 'es' | 'en'

// Check if we're on the homepage (with or without trailing slash)
const isHomepage =
  Astro.url.pathname === '/' ||
  Astro.url.pathname === '/ca' ||
  Astro.url.pathname === '/ca/' ||
  Astro.url.pathname === '/en' ||
  Astro.url.pathname === '/en/' ||
  Astro.url.pathname === '/es' ||
  Astro.url.pathname === '/es/'

// Fetch common data ONCE at the top level (Astro best practice)
// This eliminates duplicate API calls across Header, Footer, and other components
const [siteSettings, headerData, footerData] = await Promise.all([
  fetchSiteSettings(),
  fetchHeader(locale),
  fetchFooter(locale),
])

const { primaryColor = '#f2f2f2', secondaryColor = '#191919' } = siteSettings

// Generate i18n meta data
const siteUrl = Astro.site?.toString() || 'https://biombostudio.com'
const currentPath = Astro.url.pathname
const hreflangData = generateHreflangData(currentPath, siteUrl)
const canonicalUrl = getCanonicalUrl(currentPath, locale as SupportedLanguage, siteUrl)
const ogLocale = getOpenGraphLocale(locale as SupportedLanguage)
---

<!doctype html>
<html
  lang={locale}
  style={`--color-primary: ${primaryColor}; --color-secondary: ${secondaryColor};`}
>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={pageMetaDescription || 'Biombo - Art, Events, Community'} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Inline critical CSS for faster First Contentful Paint -->
    <style set:html={criticalCSS}></style>

    <!-- Preload critical fonts to prevent layout shift (CLS) -->
    <link
      rel="preload"
      href="/fonts/Poppins-Medium.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/Poppins-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- Preload then async load full CSS -->
    <link
      rel="preload"
      href="/_astro/global.css"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript><link rel="stylesheet" href="/_astro/global.css" /></noscript>

    <title>{pageMetaTitle}</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Hreflang Tags for Multi-language Support -->
    {hreflangData.map((item) => <link rel="alternate" hreflang={item.hreflang} href={item.href} />)}

    <!-- Open Graph Locale -->
    <meta property="og:locale" content={ogLocale} />
    {locale !== 'ca' && <meta property="og:locale:alternate" content="ca_ES" />}
    {locale !== 'en' && <meta property="og:locale:alternate" content="en_US" />}
    {locale !== 'es' && <meta property="og:locale:alternate" content="es_ES" />}
  </head>
  <body>
    <PageLoader isHomepage={isHomepage} />
    <Fragment set:html={HeaderSVGHover} />
    <Header locale={locale} headerData={headerData} />
    <slot />
    <Footer footerData={footerData} locale={locale} />
  </body>
</html>
